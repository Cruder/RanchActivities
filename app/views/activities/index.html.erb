<h1>Activités</h1>

<%= link_to 'Recharger', activities_path, class: 'waves-effect waves-light btn reload' %>

<table>
  <thead>
    <tr>
      <th>Nom</th>
      <th colspan="3">Participants</th>
      <th>Modifié le</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <tr data-id="<%= activity.id %>">
        <td><%= activity.name %></td>
        <td>
          <%= link_to relative_activity_path(activity, value: -1), remote: true, method: :post do %>
            <button class="waves-effect waves-light btn indigo lighten-1">
              -
            </button>
          <% end %>
        </td>
        <td class="people"><%= activity.people %></td>
        <td>
          <%= link_to relative_activity_path(activity, value: 1), remote: true, method: :post do %>
            <button class="waves-effect waves-light btn indigo lighten-1">
              +
            </button>
          <% end %>
        </td>
        <td><%= activity.updated_at.strftime '%d/%m %H:%M' %></td>
        <td>
          <%= link_to edit_activity_path(activity), class: 'waves-effect waves-light btn primary' do %>
            <i class="material-icons">edit</i>
          <% end %>
        </td>
        <td>
          <%= link_to activity, method: :delete,
                      data: { confirm: 'Etes vous sûr ? Cela entrainera la suppression de toutes les participations a cette activité.' },
                      class: 'waves-effect waves-light btn red' do %>
            <i class="material-icons">delete</i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Nouvelle activité', new_activity_path, class: 'waves-effect waves-light btn' %>
