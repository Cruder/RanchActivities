<h1>Activités</h1>

<table>
  <thead>
    <tr>
      <th>Nom</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.name %></td>
        <td><%= link_to 'Editer', edit_activity_path(activity), class: 'waves-effect waves-light btn primary' %></td>
        <td><%= link_to 'Supprimer', activity, method: :delete, data: { confirm: 'Etes vous sûr ? Cela entrainera la suppression de toutes les participations a cette activité.' }, class: 'waves-effect waves-light btn red' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nouvelle activité', new_activity_path, class: 'waves-effect waves-light btn' %>
